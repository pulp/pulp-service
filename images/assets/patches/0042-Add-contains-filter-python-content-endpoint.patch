Subject: [PATCH] Add the contains filter for the name and author fields in the
 python content endpoint.

---
 pulp_python/app/viewsets.py | 4 ++--
 1 file changed, 2 insertions(+), 2 deletions(-)

diff --git a/pulp_python/app/viewsets.py b/pulp_python/app/viewsets.py
index a14f1fe..c9c9c31 100644
--- a/pulp_python/app/viewsets.py
+++ b/pulp_python/app/viewsets.py
@@ -337,8 +337,8 @@ class PythonPackageContentFilter(core_viewsets.ContentFilter):
     class Meta:
         model = python_models.PythonPackageContent
         fields = {
-            "name": ["exact", "in"],
-            "author": ["exact", "in"],
+            "name": ["exact", "in", "contains"],
+            "author": ["exact", "in", "contains"],
             "packagetype": ["exact", "in"],
             "requires_python": ["exact", "in", "contains"],
             "filename": ["exact", "in", "contains"],
